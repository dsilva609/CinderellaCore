@using CinderellaCore.Web.Models
@model CinderellaCore.Web.Models.Handhelds

<script>
    c3.generate({
        bindto: '#@Model.ID',
        data: {
            columns: [
                ['Game Boy', @Model.NumGameBoy],
                ['Game Boy Advance', @Model.NumGameBoyAdvance],
                ['DS', @Model.NumNintendoDS],
                ['3DS', @Model.NumNintendo3DS],
                ['PSP', @Model.NumPSP],
                ['PS Vita', @Model.NumPSVita],
                ['Switch', @Model.NumSwitch]
            ],
            type: 'donut'
        },
        donut: {
            title: "@Model.Title",
            label: {
                format: function (value) { return value; }
            }
        }
    });
</script>